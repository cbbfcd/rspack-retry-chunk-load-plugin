{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES2021",
    "lib": ["DOM", "ESNext"],
    "module": "ES2020",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "declaration": true
  },
  "include": ["src/index.ts"]
}
